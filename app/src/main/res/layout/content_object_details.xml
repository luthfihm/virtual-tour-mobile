<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.luthfihm.virtualtour.activity.ObjectDetailsActivity"
    tools:showIn="@layout/activity_object_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin">
            <ImageView
                android:layout_width="15pt"
                android:layout_height="15pt"
                android:src="@drawable/info"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/objectLocation"
                android:layout_marginLeft="18pt"
                android:layout_marginTop="2pt"
                android:textSize="10pt"
                android:textStyle="bold"
                android:text="Location"></TextView>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/objectDescription"
            android:text="description" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
